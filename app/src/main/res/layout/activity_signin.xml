<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.account.SigninActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >
    <com.example.hotel_customer.view.custome.Input
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputLabel="email"
        app:inputHint="email"
        android:id="@+id/ipEmail"
        />

    <com.example.hotel_customer.view.custome.Input
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputLabel="password"
        app:inputHint="password"
        android:layout_marginTop="20dp"
        android:id="@+id/ipPassword"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:background="@drawable/bg_fill_rounded_blue"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/btnSignin"
        />
</LinearLayout>

</LinearLayout>